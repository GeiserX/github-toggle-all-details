{
  "manifest_version": 3,
  "name": "Toggle GitHub Details in Comments",
  "version": "1.0.0",
  "description": "Toggle all <details> within GitHub PR/issue comments by clicking the toolbar button.",
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle details in comments",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://*.github.com/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
